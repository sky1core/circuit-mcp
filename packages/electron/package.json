{
  "name": "@sky1core/circuit-electron",
  "version": "0.4.0",
  "description": "Electron automation CLI using Playwright (fork of Snowfort Circuit MCP)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "circuit-electron": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "NOTICE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsc -p tsconfig.esm.json --watch",
    "test": "echo \"No tests yet\"",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "playwright-core": "^1.40.0",
    "commander": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tsup": "^8.0.0"
  },
  "license": "Apache-2.0",
  "author": "sky1core (forked from Snowfort LLC)",
  "repository": {
    "type": "git",
    "url": "https://github.com/sky1core/circuit-mcp.git",
    "directory": "packages/electron"
  },
  "publishConfig": {
    "access": "public"
  }
}
